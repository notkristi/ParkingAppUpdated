@page "/reserve"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Administrator,User")]

<PageTitle>Reserve Spot</PageTitle>

<div class="container mt-5">
    <!-- Booking Steps -->
    <div class="text-center mb-4">
        <h5>(Booking Steps)</h5>
        <ul class="list-unstyled d-flex justify-content-center gap-4 flex-wrap">
            <li data-step="1">
                <span class="step-number">1</span> Επιλέξτε Ημερομηνίες
            </li>
            <li data-step="2">
                <span class="step-number">2</span> Χώρος Στάθμευσης
            </li>
            <li data-step="3">
                <span class="step-number">3</span> Πληροφορίες Πελάτη
            </li>
            <li data-step="4">
                <span class="step-number">4</span> Σύνοψη Κράτησης
            </li>
        </ul>
    </div>

    <!-- Date Selection Section -->
    <div class="mb-5">
        <div class="row">
            <div class="col-md-6">
                <h6>Ημερομηνία και ώρα εισόδου</h6>
                <input type="date" class="form-control mb-2" />
                <input type="time" class="form-control" />
            </div>
            <div class="col-md-6">
                <h6>Ημερομηνία και ώρα εξόδου</h6>
                <input type="date" class="form-control mb-2" />
                <input type="time" class="form-control" />
            </div>
        </div>

        <!-- Next Step Button -->
        <div class="text-center mt-4">
            <button class="btn btn-dark btn-lg">Επόμενο Βήμα</button>
            <p class="mt-2 text-muted">(Redirects To Vehicle Choice For Spot - Step 2)</p>
        </div>
    </div>

    <!-- Map Placeholder -->
    <div class="mb-5">
        <h6 class="text-center">(Map Placeholder)</h6>
        <div style="width: 100%; height: 200px; background-color: #f2f2f2; text-align: center; line-height: 200px;">
            [Map Goes Here]
        </div>
    </div>

    <!-- Reviews Section -->
    <div class="text-center mb-5">
        <h5>Reviews Section Sliding</h5>
        <div id="review-carousel" style="overflow: hidden;">
            <div>
                <p>[Review Slide 1 Placeholder]</p>
                <p>[Review Slide 2 Placeholder]</p>
                <p>[Review Slide 3 Placeholder]</p>
            </div>
        </div>
        <div class="mt-3">
            <button>←</button>
            <button>→</button>
        </div>
    </div>
</div>
